// jsconfig.json
{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }